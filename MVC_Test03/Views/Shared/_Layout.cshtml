<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Nội thất</title>
    <link rel="icon" type="image/x-icon" href="~/Content/images/bed.png">
    @Styles.Render("~/Content/css")
