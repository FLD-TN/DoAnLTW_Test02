@model MVC_Test03.Models.HomeIndexViewModel


@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";

}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cửa Hàng Nội Thất</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f0f0;
            color: #333;
        }

        .navbar {
            background-color: #343a40;
        }

        .card {
            background-color: #ffffff;
            border: none;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            }

        .footer {
            background-color: #343a40;
            color: #ffffff;
        }

        .btn-success {
            background -color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>

    <main class="container">


        <h1 class="text-center bg-opacity-100">Sản Phẩm tiêu biểu</h1>
        <h3>Nội thất phòng ăn</h3>
        <div class="row">
            @foreach (var product in Model.DiningRoomProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/Content/images/@product.ImagePro" alt="@product.NamePro" height="300px" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@product.NamePro</h5>
                            <p class="card-text">@product.Price</p>
                            <a class="btn btn-info" href="/Products/Details/@product.ProductID">Chi tiết</a>
                            <a href="/ShoppingCart/AddToCart/@product.ProductID" class="btn btn-success">Mua</a>
                            <span>
                                <a href="@Url.Action("FilterByIDCate", "Products", new { idCate = @product.Category.Trim() })" class="btn btn-primary">More</a>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h3>Nội thất phòng khách</h3>
        <div class="row">
            @foreach (var product in Model.LivingRoomProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/Content/images/@product.ImagePro" alt="@product.NamePro" height="300px" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@product.NamePro</h5>
                            <p class="card-text">@product.Price</p>
                            <a class="btn btn-info" href="/Products/Details/@product.ProductID">Chi tiết</a>
                            <a href="/ShoppingCart/AddToCart/@product.ProductID" class="btn btn-success">Mua</a>
                            <span>
                                <a href="@Url.Action("FilterByIDCate", "Products", new { idCate = @product.Category.Trim() })" class="btn btn-primary">More</a>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <h3>Nội thất phòng ngủ</h3>
        <div class="row">
            @foreach (var product in Model.BedroomProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/Content/images/@product.ImagePro" alt="@product.NamePro" height="300px" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@product.NamePro</h5>
                            <p class="card-text">@product.Price</p>
                            <a class="btn btn-info" href="/Products/Details/@product.ProductID">Chi tiết</a>
                            <a href="/ShoppingCart/AddToCart/@product.ProductID" class="btn btn-success">Mua</a>
                            <span>
                                <a href="@Url.Action("FilterByIDCate", "Products", new { idCate = @product.Category.Trim() })" class="btn btn-primary">More</a>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>

        @*<h1 class="text-center">Cửa Hàng Nội Thất</h1>
